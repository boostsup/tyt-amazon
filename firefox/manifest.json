{
  "name": "TYT Amazon Tag",
  "version": "0.1.2",
  "description": "Give The Young Turks money with every Amazon purchase. The TYT tag will be automatically applied when using Amazon.",
  "homepage_url": "https://github.com/stefansundin/tyt-amazon",
  "author": "Stefan Sundin",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://www.amazon.com/*",
    "*://www.amazon.com.au/*",
    "*://www.amazon.com.br/*",
    "*://www.amazon.ca/*",
    "*://www.amazon.cn/*",
    "*://www.amazon.fr/*",
    "*://www.amazon.de/*",
    "*://www.amazon.in/*",
    "*://www.amazon.it/*",
    "*://www.amazon.co.jp/*",
    "*://www.amazon.com.mx/*",
    "*://www.amazon.nl/*",
    "*://www.amazon.es/*",
    "*://www.amazon.co.uk/*"
  ],
  "applications": {
    "gecko": {
      "id": "tyt-amazon@firefox.stefansundin.com"
    }
  },
  "manifest_version": 2
}
